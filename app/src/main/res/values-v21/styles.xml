<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="care_label_drawable">@drawable/care_label_shape</item>
        <item name="android:popupBackground">@color/colorAccent</item>
        <item name="android:itemBackground">@color/white</item>

        <item name="android:textColorHint">@color/charcoalColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorTertiary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/black</item>
        <item name="android:textColorTertiaryInverse">@color/black</item>
    </style>


    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDarker</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDarker</item>
        <item name="colorAccent">@color/colorAccentDarker</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackground">@color/homeDark</item>
        <item name="android:popupBackground">@color/homeDark</item>
        <item name="android:itemBackground">@color/colorAccentDarker</item>
        <item name="care_label_drawable">@drawable/care_label_shape_darker</item>

        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:textColorTertiaryInverse">@color/white</item>
    </style>
    <style name="CustomActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/colorPrimary</item>
    </style>
    <style name="CustomActionBarDarker" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/colorPrimaryDarker</item>
    </style>

</resources>