<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="care_label_drawable">@drawable/care_label_shape</item>
        <item name="button_shape_drawable">@drawable/button_shape</item>
        <item name="button_transparent_icon_shape_drawable">@drawable/button_transparent_icon_shape</item>
        <item name="android:itemBackground">@color/white</item>

        <item name="android:textColorHint">@color/charcoalColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>


    <style name="AppThemeDark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDarker</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDarker</item>
        <item name="colorAccent">@color/colorAccentDarker</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="backgroundColor">@color/homeDark</item>
        <item name="care_label_drawable">@drawable/care_label_shape_darker</item>
        <item name="button_shape_drawable">@drawable/button_shape_darker</item>
        <item name="button_transparent_icon_shape_drawable">@drawable/button_transparent_icon_shape_darker</item>

        <item name="android:textColorHint">@color/lightGrayColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="CustomActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/colorPrimary</item>
    </style>
    <style name="CustomActionBarDarker" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/colorPrimaryDarker</item>
    </style>

    <style name="AlertDialogWhite" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
    </style>
    <style name="AlertDialogDark" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/colorAccentDarker</item>
    </style>
</resources>